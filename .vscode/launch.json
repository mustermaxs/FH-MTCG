{
    "version": "0.2.0",
    "configurations": [

        {
            "name": ".NET NUnit Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/MTCG.Tests/obj/Debug/net6.0/MTCG.Tests.dll",
            "args": [
                "test",
                "--no-restore" // Don't restore dependencies before running tests
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/index.html"
            },
            "logging": {
                "moduleLoad": false,
                "exceptions": true,
                "programOutput": true,
                "trace": true
            },
            "env": {
                "UNIT_TESTS": "true"
            }
        }
    ]
}
